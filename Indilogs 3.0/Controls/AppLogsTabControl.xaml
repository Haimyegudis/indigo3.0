<UserControl x:Class="IndiLogs_3._0.Controls.AppLogsTabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:IndiLogs_3._0.Controls"
             xmlns:converters="clr-namespace:IndiLogs_3._0.Converters"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid>
        <DataGrid x:Name="AppLogsGrid" ItemsSource="{Binding AppDevLogsFiltered}" SelectedItem="{Binding SelectedLog}" Sorting="AppLogsGrid_Sorting" FontSize="{Binding GridFontSize}" FontFamily="{DynamicResource ContentFontFamily}" FontWeight="{DynamicResource ContentFontWeight}" AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionMode="Extended" SelectionUnit="FullRow" 
                  HorizontalScrollBarVisibility="Auto" RequestBringIntoView="AppLogsGrid_RequestBringIntoView" Loaded="AppLogsGrid_Loaded" LoadingRow="AppLogsGrid_LoadingRow"
                  GridLinesVisibility="Vertical" VerticalGridLinesBrush="{DynamicResource BorderColor}" SelectionChanged="AppLogsGrid_SelectionChanged" ColumnReordered="AppLogsGrid_ColumnReordered">

            <DataGrid.InputBindings>
                <KeyBinding Key="Space" Command="{Binding MarkRowCommand}" />
                <MouseBinding Gesture="LeftDoubleClick" Command="{Binding ViewLogDetailsCommand}" CommandParameter="{Binding SelectedLog}" />
            </DataGrid.InputBindings>

            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Command="{Binding PlacementTarget.DataContext.FilterContextCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" Header="Time Focus Filter"/>
                    <Separator/>
                    <MenuItem Header="âœï¸ Add/Edit Annotation" Command="{Binding AddAnnotationCommand}" CommandParameter="{Binding SelectedLog}"/>
                    <MenuItem Header="ðŸ—‘ Delete Annotation" Command="{Binding DeleteAnnotationCommand}" CommandParameter="{Binding SelectedLog}"/>
                    <Separator/>
                    <MenuItem Header="Filter Out (Message)..." Command="{Binding FilterOutCommand}"/>
                </ContextMenu>
            </DataGrid.ContextMenu>

            <DataGrid.Columns>
                <DataGridTemplateColumn Header="" Width="30" CanUserSort="False">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="{Binding AnnotationIcon}" Command="{Binding DataContext.ToggleAnnotationCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" CommandParameter="{Binding}" Background="Transparent" BorderThickness="0" Cursor="Hand" FontSize="14" Padding="0" HorizontalAlignment="Center" VerticalAlignment="Center" ToolTip="Click to show/hide annotation" Visibility="{Binding HasAnnotation, Converter={StaticResource BoolToVisibilityConverter}}">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <ContentPresenter/>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Lvl" Binding="{Binding Level}" Width="50" FontWeight="Bold" CanUserSort="True" SortMemberPath="Level">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="Padding" Value="8,0"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasAnnotation}" Value="True">
                                    <Setter Property="Foreground" Value="Black"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Level}" Value="Error">
                                    <Setter Property="Foreground" Value="White"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Level}" Value="ERROR">
                                    <Setter Property="Foreground" Value="White"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=IsSelected}" Value="True">
                                    <Setter Property="Foreground" Value="Black"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Timestamp" Binding="{Binding Date, StringFormat='yyyy-MM-dd HH:mm:ss.fff'}" Width="180" CanUserSort="True" SortMemberPath="Time">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="Padding" Value="8,0"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasAnnotation}" Value="True">
                                    <Setter Property="Foreground" Value="Black"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Level}" Value="Error">
                                    <Setter Property="Foreground" Value="White"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Level}" Value="ERROR">
                                    <Setter Property="Foreground" Value="White"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=IsSelected}" Value="True">
                                    <Setter Property="Foreground" Value="Black"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Binding="{Binding Logger}" Width="200" CanUserSort="True" SortMemberPath="Logger">
                    <DataGridTextColumn.Header>
                        <Button Content="ðŸ” Logger" Click="LoggerFilterButton_Click" Background="Transparent" BorderThickness="0" Foreground="{DynamicResource TextPrimary}" Cursor="Hand" ToolTip="Click to filter by logger" FontSize="12" Padding="6,2"/>
                    </DataGridTextColumn.Header>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="Padding" Value="8,0"/>
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryColor}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasAnnotation}" Value="True">
                                    <Setter Property="Foreground" Value="Black"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Level}" Value="Error">
                                    <Setter Property="Foreground" Value="White"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Level}" Value="ERROR">
                                    <Setter Property="Foreground" Value="White"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=IsSelected}" Value="True">
                                    <Setter Property="Foreground" Value="Black"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Binding="{Binding ThreadName}" Width="90" CanUserSort="True" SortMemberPath="Thread">
                    <DataGridTextColumn.Header>
                        <Button Content="ðŸ” Thread" Click="ThreadFilterButton_Click" Background="Transparent" BorderThickness="0" Foreground="{DynamicResource TextPrimary}" Cursor="Hand" ToolTip="Click to filter by thread" FontSize="12" Padding="6,2"/>
                    </DataGridTextColumn.Header>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="Padding" Value="8,0"/>
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryColor}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasAnnotation}" Value="True">
                                    <Setter Property="Foreground" Value="Black"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Level}" Value="Error">
                                    <Setter Property="Foreground" Value="White"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Level}" Value="ERROR">
                                    <Setter Property="Foreground" Value="White"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ThreadName}" Value="Manager">
                                    <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=IsSelected}" Value="True">
                                    <Setter Property="Foreground" Value="Black"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Binding="{Binding Method}" Width="230" CanUserSort="True" SortMemberPath="Method">
                    <DataGridTextColumn.Header>
                        <Button Content="ðŸ” Method" Click="MethodFilterButton_Click" Background="Transparent" BorderThickness="0" Foreground="{DynamicResource TextPrimary}" Cursor="Hand" ToolTip="Click to filter by method" FontSize="12" Padding="6,2"/>
                    </DataGridTextColumn.Header>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="Padding" Value="8,0"/>
                            <Setter Property="Foreground" Value="{DynamicResource SecondaryColor}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasAnnotation}" Value="True">
                                    <Setter Property="Foreground" Value="Black"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Level}" Value="Error">
                                    <Setter Property="Foreground" Value="White"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Level}" Value="ERROR">
                                    <Setter Property="Foreground" Value="White"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=IsSelected}" Value="True">
                                    <Setter Property="Foreground" Value="Black"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTemplateColumn Header="Message" MinWidth="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <controls:HighlightTextBlock Text="{Binding Message}" HighlightText="{Binding DataContext.SearchText, RelativeSource={RelativeSource AncestorType=DataGrid}}" VerticalAlignment="Center" Padding="8,0">
                                <controls:HighlightTextBlock.Style>
                                    <Style TargetType="controls:HighlightTextBlock">
                                        <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
                                        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                        <Setter Property="TextWrapping" Value="NoWrap"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasAnnotation}" Value="True">
                                                <Setter Property="Foreground" Value="Black"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Level}" Value="Error">
                                                <Setter Property="Foreground" Value="White"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Level}" Value="ERROR">
                                                <Setter Property="Foreground" Value="White"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=IsSelected}" Value="True">
                                                <Setter Property="Foreground" Value="Black"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </controls:HighlightTextBlock.Style>
                            </controls:HighlightTextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>

            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <Border Background="{DynamicResource BgDark}" BorderBrush="#FFD700" BorderThickness="2" Padding="12" Margin="5,0,5,5" CornerRadius="4">
                        <TextBlock Text="{Binding AnnotationContent}"
                                   TextWrapping="Wrap"
                                   Foreground="{DynamicResource TextPrimary}"
                                   FontStyle="Italic"
                                   VerticalAlignment="Center"/>
                    </Border>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow" BasedOn="{StaticResource LogRowStyle}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsAnnotationExpanded}" Value="True">
                            <Setter Property="DetailsVisibility" Value="Visible"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsAnnotationExpanded}" Value="False">
                            <Setter Property="DetailsVisibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>
    </Grid>
</UserControl>