<Window x:Class="IndiLogs_3._0.Views.StatsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Log Statistics Dashboard" Height="800" Width="1200"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BgDark}"
        Foreground="{DynamicResource TextPrimary}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="LOG STATISTICS DASHBOARD" FontSize="24" FontWeight="Bold" Foreground="{DynamicResource TextPrimary}"/>
            <TextBlock x:Name="SummaryText" Text="Analyzing logs..." Foreground="{DynamicResource TextSecondary}" FontSize="14" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Row 1: Top 10 Errors + Thread Distribution -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Top 10 Errors -->
                    <Border Grid.Column="0" Background="{DynamicResource BgCard}" CornerRadius="8" Padding="15">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                                <TextBlock Text="TOP 10 MOST COMMON ERRORS" FontWeight="Bold" Foreground="{DynamicResource DangerColor}" FontSize="14"/>
                                <TextBlock x:Name="ErrorCountText" Text="" Foreground="{DynamicResource TextSecondary}" FontSize="12" Margin="10,2,0,0"/>
                            </StackPanel>

                            <ItemsControl x:Name="ErrorHistogram" Grid.Row="1">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,0,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="{Binding Message}"
                                                       Foreground="{DynamicResource TextPrimary}"
                                                       FontSize="12" TextTrimming="CharacterEllipsis"
                                                       ToolTip="{Binding Message}"/>

                                            <Border Grid.Row="1" Grid.Column="0" Height="20" Margin="0,4,10,0" CornerRadius="3" Background="{DynamicResource BgPanel}">
                                                <Border Background="{DynamicResource DangerColor}"
                                                        Width="{Binding BarWidth}"
                                                        HorizontalAlignment="Left"
                                                        CornerRadius="3"/>
                                            </Border>

                                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Count}"
                                                       Foreground="{DynamicResource DangerColor}"
                                                       FontWeight="Bold" FontSize="12"
                                                       VerticalAlignment="Center" MinWidth="40" TextAlignment="Right"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </Border>

                    <!-- Thread Distribution -->
                    <Border Grid.Column="2" Background="{DynamicResource BgCard}" CornerRadius="8" Padding="15">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                                <TextBlock Text="THREAD LOAD DISTRIBUTION" FontWeight="Bold" Foreground="{DynamicResource PrimaryColor}" FontSize="14"/>
                                <TextBlock x:Name="ThreadCountText" Text="" Foreground="{DynamicResource TextSecondary}" FontSize="12" Margin="10,2,0,0"/>
                            </StackPanel>

                            <ItemsControl x:Name="ThreadHistogram" Grid.Row="1">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,0,0,6">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="{Binding Name}"
                                                       Foreground="{DynamicResource TextPrimary}"
                                                       FontSize="12" TextTrimming="CharacterEllipsis"
                                                       ToolTip="{Binding Name}"/>

                                            <Border Grid.Column="1" Height="16" Margin="10,0" CornerRadius="3" Background="{DynamicResource BgPanel}">
                                                <Border Background="{DynamicResource PrimaryColor}"
                                                        Width="{Binding BarWidth}"
                                                        HorizontalAlignment="Left"
                                                        CornerRadius="3"/>
                                            </Border>

                                            <TextBlock Grid.Column="2" Text="{Binding DisplayText}"
                                                       Foreground="{DynamicResource TextSecondary}"
                                                       FontSize="11" VerticalAlignment="Center" MinWidth="80" TextAlignment="Right"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Row 2: Logger Distribution -->
                <Border Grid.Row="1" Background="{DynamicResource BgCard}" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="LOGGER LOAD DISTRIBUTION (Top 15)" FontWeight="Bold" Foreground="{DynamicResource SecondaryColor}" FontSize="14"/>
                            <TextBlock x:Name="LoggerCountText" Text="" Foreground="{DynamicResource TextSecondary}" FontSize="12" Margin="10,2,0,0"/>
                        </StackPanel>

                        <ItemsControl x:Name="LoggerHistogram" Grid.Row="1">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource BgPanel}" CornerRadius="4" Padding="10,6" Margin="0,0,8,8" MinWidth="200">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="{Binding Name}"
                                                       Foreground="{DynamicResource TextPrimary}"
                                                       FontSize="11" TextTrimming="CharacterEllipsis"
                                                       ToolTip="{Binding Name}"/>

                                            <TextBlock Grid.Column="1" Text="{Binding DisplayText}"
                                                       Foreground="{DynamicResource SecondaryColor}"
                                                       FontWeight="Bold" FontSize="11" Margin="10,0,0,0"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>

                <!-- Row 3: Gap Analysis -->
                <Border Grid.Row="2" Background="{DynamicResource BgCard}" CornerRadius="8" Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="GAP ANALYSIS" FontWeight="Bold" Foreground="{DynamicResource WarningColor}" FontSize="14"/>
                            <TextBlock Text=" (Time gaps >= 2 seconds with no log activity)" Foreground="{DynamicResource TextSecondary}" FontSize="12" VerticalAlignment="Bottom"/>
                        </StackPanel>

                        <TextBlock x:Name="GapSummaryText" Grid.Row="1" Text="" Foreground="{DynamicResource TextSecondary}" FontSize="12" Margin="0,0,0,15"/>

                        <DataGrid x:Name="GapDataGrid" Grid.Row="2"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  Foreground="{DynamicResource TextPrimary}"
                                  RowBackground="{DynamicResource BgPanel}"
                                  AlternatingRowBackground="{DynamicResource BgDark}"
                                  GridLinesVisibility="Horizontal"
                                  HorizontalGridLinesBrush="{DynamicResource BorderColor}"
                                  MaxHeight="250"
                                  HeadersVisibility="Column">

                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="{DynamicResource BgPanel}"/>
                                    <Setter Property="Foreground" Value="{DynamicResource TextSecondary}"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="FontSize" Value="11"/>
                                    <Setter Property="Padding" Value="10,8"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="Padding" Value="10,6"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="DataGridCell">
                                                <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                                                    <ContentPresenter VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </DataGrid.CellStyle>

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="#" Binding="{Binding Index}" Width="50"/>
                                <DataGridTextColumn Header="Gap Start" Binding="{Binding StartTime, StringFormat='yyyy-MM-dd HH:mm:ss.fff'}" Width="180"/>
                                <DataGridTextColumn Header="Gap End" Binding="{Binding EndTime, StringFormat='yyyy-MM-dd HH:mm:ss.fff'}" Width="180"/>
                                <DataGridTextColumn Header="Duration" Binding="{Binding DurationText}" Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="{DynamicResource WarningColor}"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Last Log Before Gap" Binding="{Binding LastMessageBeforeGap}" Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                            <Setter Property="ToolTip" Value="{Binding LastMessageBeforeGap}"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- No gaps message -->
                        <TextBlock x:Name="NoGapsMessage" Grid.Row="2"
                                   Text="No significant time gaps found in the logs."
                                   Foreground="{DynamicResource SuccessColor}"
                                   FontSize="14"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Visibility="Collapsed"/>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Export Report" Click="Export_Click"
                    Style="{DynamicResource ModernBtn}"
                    Background="{DynamicResource PrimaryColor}"
                    Foreground="White"
                    Width="120" Height="35" Margin="0,0,10,0"/>
            <Button Content="Close" Click="Close_Click"
                    Style="{DynamicResource ModernBtn}"
                    Width="100" Height="35"/>
        </StackPanel>
    </Grid>
</Window>
