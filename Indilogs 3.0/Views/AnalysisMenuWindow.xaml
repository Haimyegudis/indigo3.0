<Window x:Class="IndiLogs_3._0.Views.AnalysisMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Run Analysis"
        Height="350" Width="420"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BgDark}"
        Foreground="{DynamicResource TextPrimary}"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True">

    <Border Background="{DynamicResource BgPanel}"
            BorderBrush="{DynamicResource BorderColor}"
            BorderThickness="1"
            CornerRadius="12">
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="SELECT ANALYSIS TYPE"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="{DynamicResource TextPrimary}"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Choose what you want to analyze"
                           FontSize="12"
                           Foreground="{DynamicResource TextSecondary}"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <!-- Failures Button -->
                <Button x:Name="FailuresButton" Click="Failures_Click" Height="55" Margin="0,0,0,15">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource ModernBtn}">
                            <Setter Property="Background" Value="{DynamicResource DangerColor}"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Style>
                    </Button.Style>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="FAILURES" FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
                        <TextBlock Text=" - Process state failures &amp; errors"
                                   FontSize="12"
                                   Foreground="#CCFFFFFF"
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0"/>
                    </StackPanel>
                </Button>

                <!-- Stats Button -->
                <Button x:Name="StatsButton" Click="Stats_Click" Height="55">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource ModernBtn}">
                            <Setter Property="Background" Value="{DynamicResource PrimaryColor}"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Style>
                    </Button.Style>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="STATISTICS" FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
                        <TextBlock Text=" - Load distribution &amp; gap analysis"
                                   FontSize="12"
                                   Foreground="#CCFFFFFF"
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- Cancel Button -->
            <Button Grid.Row="2" Content="Cancel" Click="Cancel_Click"
                    Style="{DynamicResource ModernBtn}"
                    Background="{DynamicResource BgCard}"
                    HorizontalAlignment="Center"
                    Width="100" Height="30"
                    Margin="0,15,0,0"/>
        </Grid>
    </Border>
</Window>
