<UserControl x:Class="IndiLogs_3._0.Views.GraphsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:oxy="http://oxyplot.org/wpf"
             xmlns:vm="clr-namespace:IndiLogs_3._0.ViewModels"
             xmlns:models="clr-namespace:IndiLogs_3._0.Models"
             Padding="0" Margin="0">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Style x:Key="PanelHeader" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#555555"/>
            <Setter Property="Margin" Value="8,10,8,5"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Background" Value="#F3F3F3"/>
        </Style>

        <Style x:Key="ModernBtn" TargetType="Button">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="3" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#D0D0D0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3B82F6"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="White" Margin="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350" MinWidth="300" MaxWidth="600"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT PANEL -->
        <Border Grid.Column="0" Background="#F3F3F3" BorderBrush="#DDDDDD" BorderThickness="0,0,1,0" Padding="0">
            <Grid Margin="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="200" MinHeight="150" MaxHeight="350"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="120"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*" MinHeight="150"/>
                </Grid.RowDefinitions>

                <!-- COMPONENTS TREE SECTION -->
                <TextBlock Text="AVAILABLE COMPONENTS (Double Click to Add)" 
                           Style="{StaticResource PanelHeader}" 
                           Grid.Row="0"/>

                <Border Grid.Row="1" BorderBrush="#CCCCCC" BorderThickness="1" Background="White" Margin="8,0,8,8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBox Grid.Row="0"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                 Background="White" 
                                 Foreground="Black" 
                                 BorderThickness="0,0,0,1" 
                                 BorderBrush="#CCC" 
                                 Padding="6" 
                                 Margin="0"
                                 Tag="Search..." 
                                 FontSize="12"/>

                        <ScrollViewer Grid.Row="1" 
                                      VerticalScrollBarVisibility="Auto" 
                                      HorizontalScrollBarVisibility="Disabled"
                                      Padding="0"
                                      PreviewMouseWheel="TreeView_PreviewMouseWheel">
                            <TreeView x:Name="ComponentTreeView"
                                      ItemsSource="{Binding ComponentTree}" 
                                      Background="Transparent" 
                                      Foreground="Black" 
                                      BorderThickness="0"
                                      Padding="4"
                                      Margin="0">
                                <TreeView.ItemContainerStyle>
                                    <Style TargetType="TreeViewItem">
                                        <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                                        <Setter Property="Visibility" Value="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                        <EventSetter Event="Expanded" Handler="TreeViewItem_Expanded"/>
                                        <EventSetter Event="Collapsed" Handler="TreeViewItem_Collapsed"/>
                                    </Style>
                                </TreeView.ItemContainerStyle>
                                <TreeView.ItemTemplate>
                                    <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                        <TextBlock Text="{Binding Name}" Padding="4,2" Background="Transparent" Cursor="Hand">
                                            <TextBlock.InputBindings>
                                                <MouseBinding Gesture="LeftDoubleClick" 
                                                              Command="{Binding DataContext.AddSignalToActiveCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                              CommandParameter="{Binding FullPath}"/>
                                            </TextBlock.InputBindings>
                                        </TextBlock>
                                    </HierarchicalDataTemplate>
                                </TreeView.ItemTemplate>
                            </TreeView>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- ACTIVE SIGNALS SECTION -->
                <TextBlock Text="ACTIVE CHART SIGNALS" 
                           Style="{StaticResource PanelHeader}" 
                           Grid.Row="2"/>

                <Border Grid.Row="3" BorderBrush="#CCCCCC" BorderThickness="1" Background="White" Margin="8,0,8,8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <ScrollViewer Grid.Row="0" 
                                      VerticalScrollBarVisibility="Auto"
                                      Padding="0"
                                      PreviewMouseWheel="ActiveSignals_PreviewMouseWheel">
                            <ListBox ItemsSource="{Binding ActiveChartSignals}" 
                                     Background="Transparent" 
                                     Foreground="#005A9E" 
                                     BorderThickness="0"
                                     Padding="4"
                                     Margin="0"
                                     SelectedItem="{Binding SelectedSignalToRemove}" 
                                     FontSize="11"/>
                        </ScrollViewer>

                        <Button Grid.Row="1" 
                                Content="Remove Selected" 
                                Command="{Binding RemoveSignalFromActiveCommand}" 
                                Style="{StaticResource ModernBtn}" 
                                Background="#FFEBEB" 
                                BorderBrush="#FFCCCC" 
                                Foreground="#CC0000"
                                Margin="4"/>
                    </Grid>
                </Border>

                <!-- TIMELINE SECTION -->
                <TextBlock Text="TIMELINE (Double Click to Zoom)" 
                           Style="{StaticResource PanelHeader}" 
                           Grid.Row="4"/>

                <Border Grid.Row="5" BorderBrush="#CCCCCC" BorderThickness="1" Background="White" Margin="8,0,8,8">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  Padding="0"
                                  PreviewMouseWheel="Timeline_PreviewMouseWheel">
                        <ListBox ItemsSource="{Binding StateTimeline}" 
                                 Background="Transparent" 
                                 Foreground="Black" 
                                 BorderThickness="0" 
                                 FontSize="11"
                                 Padding="4"
                                 Margin="0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,2" Background="Transparent" Cursor="Hand">
                                        <Grid.InputBindings>
                                            <MouseBinding Gesture="LeftDoubleClick" 
                                                          Command="{Binding DataContext.ZoomToStateCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                          CommandParameter="{Binding}"/>
                                        </Grid.InputBindings>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="6"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Rectangle Grid.Column="0"
           Fill="Gray" 
           Width="4" 
           Height="16" 
           VerticalAlignment="Center"
           Margin="0,0,4,0"/>

                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding TimeRangeStr}" 
                                                   Foreground="#666" 
                                                   Margin="4,0" 
                                                   VerticalAlignment="Center" 
                                                   FontFamily="Consolas" 
                                                   FontSize="10"/>

                                        <TextBlock Grid.Column="2" 
                                                   Text="{Binding Name}" 
                                                   Margin="4,0" 
                                                   VerticalAlignment="Center" 
                                                   FontWeight="SemiBold"
                                                   TextTrimming="CharacterEllipsis"/>

                                        <TextBlock Grid.Column="3" 
                                                   Text="{Binding DurationStr}" 
                                                   Foreground="#888" 
                                                   Margin="4,0" 
                                                   VerticalAlignment="Center" 
                                                   FontSize="10"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Border>

        <!-- GRID SPLITTER -->
        <GridSplitter Grid.Column="1" Width="4" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="#DDDDDD" ShowsPreview="True"/>

        <!-- RIGHT PANEL: Charts -->
        <Grid Grid.Column="2" Background="#FAFAFA">
            <Grid.RowDefinitions>
                <RowDefinition Height="45"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>

            <!-- TOOLBAR -->
            <Border Grid.Row="0" Background="#EFEFEF" Padding="5" BorderBrush="#DDDDDD" BorderThickness="0,0,0,1">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="➕ Chart" Command="{Binding AddChartCommand}" Style="{StaticResource ModernBtn}" Background="#E6F4EA" Foreground="#1E7E34" FontWeight="Bold"/>
                    <Button Content="➖ Chart" Command="{Binding RemoveChartCommand}" Style="{StaticResource ModernBtn}" Background="#FDECEA" Foreground="#C62828"/>
                    <Button Content="Clear" Command="{Binding ClearChartCommand}" Style="{StaticResource ModernBtn}"/>

                    <Rectangle Width="1" Height="20" Fill="#CCC" Margin="10,0"/>

                    <TextBlock Text="Start:" Foreground="#444" VerticalAlignment="Center" Margin="5,0"/>
                    <TextBox Text="{Binding StartTimeText, UpdateSourceTrigger=LostFocus}" Width="65" Background="White" Foreground="Black" BorderThickness="1" BorderBrush="#CCC" VerticalContentAlignment="Center" TextAlignment="Center" Padding="2"/>

                    <TextBlock Text="End:" Foreground="#444" VerticalAlignment="Center" Margin="8,0,5,0"/>
                    <TextBox Text="{Binding EndTimeText, UpdateSourceTrigger=LostFocus}" Width="65" Background="White" Foreground="Black" BorderThickness="1" BorderBrush="#CCC" VerticalContentAlignment="Center" TextAlignment="Center" Padding="2"/>

                    <Button Content="Apply" Command="{Binding ApplyTimeFilterCommand}" Style="{StaticResource ModernBtn}" Background="#E8F0FE" Foreground="#1967D2" FontWeight="Bold" Margin="5,0"/>
                    <Button Content="Reset" Command="{Binding ResetZoomCommand}" Style="{StaticResource ModernBtn}"/>
                </StackPanel>
            </Border>

            <!-- CHARTS AREA -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Disabled"
                          Background="White"
                          PreviewMouseWheel="Charts_PreviewMouseWheel"
                          PreviewKeyDown="Charts_PreviewKeyDown">
                <ItemsControl ItemsSource="{Binding Charts}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="{Binding BorderColor}" 
                                    BorderThickness="{Binding BorderThickness}" 
                                    Margin="4,2" 
                                    Height="300" 
                                    Background="White"
                                    PreviewMouseDown="Chart_MouseDown"
                                    Cursor="Hand">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <DockPanel Grid.Row="0" Background="#F5F5F5" LastChildFill="False">
                                        <TextBlock Text="{Binding Title}" Foreground="#333" Margin="8,4" FontWeight="Bold" FontSize="11"/>
                                        <Button Content="↗" Command="{Binding FloatCommand}" Width="24" Height="20" Padding="0" Background="Transparent" Foreground="#666" BorderThickness="0" DockPanel.Dock="Right" Cursor="Hand" ToolTip="Detach"/>
                                    </DockPanel>

                                    <Border Grid.Row="1" Background="#F9F9F9" BorderBrush="#DDD" BorderThickness="0,1">
                                        <ItemsControl ItemsSource="{Binding DataContext.StateTimeline, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <Canvas Height="25"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Rectangle Fill="LightGray"
           Height="25"
           ToolTip="{Binding Name}"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Border>

                                    <!-- ✅ כאן התיקון - הוספת PreviewMouseWheel -->
                                    <oxy:PlotView Grid.Row="2" 
              Model="{Binding PlotModel}"
              Controller="{Binding Controller}"
              Background="Transparent"
              PreviewMouseWheel="PlotView_PreviewMouseWheel"
              Focusable="True"
              FocusVisualStyle="{x:Null}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- STATUS BAR -->
            <StatusBar Grid.Row="2" Background="#007ACC" Foreground="White">
                <StatusBarItem>
                    <TextBlock Text="{Binding Status}" FontWeight="SemiBold" Margin="5,0"/>
                </StatusBarItem>
            </StatusBar>
        </Grid>
    </Grid>
</UserControl>