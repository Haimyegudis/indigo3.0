<Window x:Class="IndiLogs_3._0.Views.GlobalGrepWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:IndiLogs_3._0.Controls"
        xmlns:converters="clr-namespace:IndiLogs_3._0.Converters"
        Title="Global Grep - Search All Sessions" Height="750" Width="1300"
        WindowStartupLocation="CenterScreen" Background="{DynamicResource BgDark}">

    <Window.Resources>
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="8"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{DynamicResource BgPanel}" Padding="10" Margin="0,0,0,10" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Search Query:" Foreground="{DynamicResource TextPrimary}" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>
                    <TextBox Grid.Column="1" Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}" FontFamily="Consolas" FontSize="13">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>
                    <CheckBox Grid.Column="2" Content="Use Regex" IsChecked="{Binding UseRegex}" Margin="15,0,0,0"/>
                    <Button Grid.Column="3" Content="Search" Command="{Binding SearchCommand}" Width="100" IsEnabled="{Binding IsNotSearching}"/>
                </Grid>

                <Grid Grid.Row="1" Margin="0,0,0,10">
                    <GroupBox Header="Search Location">
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Text="{Binding ExternalPath}" ToolTip="Select ZIP file or folder containing log files"/>
                            <Button Grid.Column="1" Content="Browse..." Click="BrowseButton_Click" Width="100" Padding="8,5" Margin="10,0,0,0"/>
                        </Grid>
                    </GroupBox>
                </Grid>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Log Types:" Foreground="{DynamicResource TextPrimary}" Margin="0,0,15,0" VerticalAlignment="Center"/>
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <CheckBox Content="PLC" IsChecked="{Binding SearchPLC}"/>
                        <CheckBox Content="APP" IsChecked="{Binding SearchAPP}"/>
                    </StackPanel>
                    <Button Grid.Column="2" Content="Cancel" Command="{Binding CancelSearchCommand}" Visibility="{Binding IsSearching, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    <Button Grid.Column="3" Content="Clear" Command="{Binding ClearResultsCommand}" Margin="5,0,0,0"/>
                </Grid>
            </Grid>
        </Border>

        <DataGrid Grid.Row="1" x:Name="ResultsGrid" ItemsSource="{Binding Results}" SelectedItem="{Binding SelectedResult}"
                  AutoGenerateColumns="False" IsReadOnly="True" Background="Transparent" RowStyle="{DynamicResource LogRowStyle}"
                  MouseDoubleClick="ResultsGrid_MouseDoubleClick">
            <DataGrid.Columns>
                <!-- Lvl -->
                <DataGridTextColumn Header="Lvl" Binding="{Binding ReferencedLogEntry.Level}" Width="70" FontWeight="Bold">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Timestamp -->
                <DataGridTextColumn Header="Timestamp" Binding="{Binding ReferencedLogEntry.Date, StringFormat='yyyy-MM-dd HH:mm:ss.fff'}" Width="180" FontFamily="Consolas">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="Padding" Value="8,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Thread -->
                <DataGridTextColumn Header="Thread" Binding="{Binding ReferencedLogEntry.ThreadName}" Width="130">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="Padding" Value="8,0"/>
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryColor}"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Logger -->
                <DataGridTextColumn Header="Logger" Binding="{Binding ReferencedLogEntry.Logger}" Width="200">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Method -->
                <DataGridTextColumn Header="Method" Binding="{Binding ReferencedLogEntry.Method}" Width="200">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="Foreground" Value="{DynamicResource SecondaryColor}"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Data -->
                <DataGridTextColumn Header="Data" Binding="{Binding ReferencedLogEntry.Data}" Width="250">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Pattern -->
                <DataGridTextColumn Header="Pattern" Binding="{Binding ReferencedLogEntry.Pattern}" Width="150">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Message -->
                <DataGridTemplateColumn Header="Message" Width="*" MinWidth="400">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ReferencedLogEntry.Message}" TextTrimming="CharacterEllipsis" FontFamily="Consolas" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
                                        <Setter Property="TextWrapping" Value="NoWrap"/>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Session -->
                <DataGridTextColumn Header="Session" Binding="{Binding SessionName}" Width="150">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryHover}"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Line# -->
                <DataGridTextColumn Header="Line#" Binding="{Binding LineNumber}" Width="60">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="2" Background="{DynamicResource BgPanel}" Padding="10" Margin="0,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Results: " Foreground="{DynamicResource TextPrimary}"/>
                    <TextBlock Text="{Binding ResultCount}" Foreground="{DynamicResource PrimaryColor}" FontWeight="Bold"/>
                    <TextBlock Text="{Binding StatusMessage}" Foreground="{DynamicResource TextSecondary}" Margin="15,0"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" Visibility="{Binding IsSearching, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ProgressBar Width="150" Height="15" Maximum="{Binding ProgressTotal}" Value="{Binding ProgressCurrent}"/>
                    <TextBlock Text="{Binding ProgressCurrent}" Margin="5,0" Foreground="Gray"/>
                </StackPanel>
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="First Occurrence" Command="{Binding FindFirstOccurrenceCommand}" Margin="0,0,5,0"/>
                    <Button x:Name="OpenAllFilesButton" Content="Open All Files" Click="OpenAllFiles_Click" Width="120" Margin="0,0,5,0"/>
                    <Button x:Name="JumpButton" Content="Jump to Log" Click="JumpToLog_Click" Width="120"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>