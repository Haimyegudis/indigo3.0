<UserControl x:Class="IndiLogs_3._0.Views.VisualTimelineView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:IndiLogs_3._0.Controls"
             xmlns:converters="clr-namespace:IndiLogs_3._0.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Background="{DynamicResource BgDark}">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="250"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="{DynamicResource BgPanel}" BorderThickness="0,0,0,1" BorderBrush="{DynamicResource BorderColor}">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10">
                <TextBlock Text="Timeline Visualization" Foreground="{DynamicResource TextPrimary}" FontWeight="Bold" FontSize="16" Margin="0,0,20,0"/>

                <StackPanel Orientation="Horizontal" Margin="20,0">
                    <TextBlock Text="States: " Foreground="{DynamicResource TextSecondary}"/>
                    <TextBlock Text="{Binding TotalStates}" Foreground="{DynamicResource TextPrimary}" FontWeight="Bold" Margin="0,0,10,0"/>

                    <TextBlock Text="Errors: " Foreground="{DynamicResource TextSecondary}"/>
                    <TextBlock Text="{Binding TotalErrors}" Foreground="#FF6B6B" FontWeight="Bold" Margin="0,0,10,0"/>

                    <TextBlock Text="Events: " Foreground="{DynamicResource TextSecondary}"/>
                    <TextBlock Text="{Binding TotalEvents}" Foreground="Cyan" FontWeight="Bold" Margin="0,0,10,0"/>
                </StackPanel>

                <Button Content="Zoom Out / Clear Filter"
                        Command="{Binding DataContext.ResetTimeFocusCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                        Padding="10,2" Margin="20,0,5,0"
                        Background="#3B82F6" Foreground="White" BorderThickness="0" Cursor="Hand"
                        ToolTip="Reset zoom and clear all filters to show all states"/>
            </StackPanel>
        </Border>

        <controls:TimelineCanvas Grid.Row="1" x:Name="MyTimeline"
                                 States="{Binding States}"
                                 Markers="{Binding Markers}"
                                 ViewScale="{Binding ViewScale, Mode=TwoWay}"
                                 ViewOffset="{Binding ViewOffset, Mode=TwoWay}"
                                 StateClicked="OnStateClicked"
                                 MarkerClicked="OnMarkerClicked"/>

        <Grid Grid.Row="2" Background="{DynamicResource BgPanel}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10,8">
                <TextBlock Text="Selected State Details:" Foreground="{DynamicResource PrimaryColor}" FontWeight="Bold" Margin="0,0,15,0" FontSize="14"/>

                <TextBlock Text="Name: " Foreground="{DynamicResource TextSecondary}"/>
                <TextBlock Text="{Binding SelectedState.Name}" Foreground="{DynamicResource TextPrimary}" FontWeight="Bold" Margin="0,0,15,0"/>

                <TextBlock Text="Result: " Foreground="{DynamicResource TextSecondary}"/>
                <TextBlock Text="{Binding SelectedStateResult}" FontWeight="Bold" Margin="0,0,15,0">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedStateResult}" Value="FAILED">
                                    <Setter Property="Foreground" Value="#FF4444"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding SelectedStateResult}" Value="WARNING">
                                    <Setter Property="Foreground" Value="Orange"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding SelectedStateResult}" Value="SUCCESS">
                                    <Setter Property="Foreground" Value="#00FF00"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <TextBlock Text="Duration: " Foreground="{DynamicResource TextSecondary}"/>
                <TextBlock Text="{Binding SelectedStateDuration}" Foreground="{DynamicResource TextPrimary}" FontWeight="Bold" Margin="0,0,15,0"/>

                <TextBlock Text="Errors in State: " Foreground="{DynamicResource TextSecondary}"/>
                <TextBlock Text="{Binding SelectedStateErrors}" Foreground="#FF6B6B" FontWeight="Bold"/>
            </StackPanel>

            <Grid Grid.Row="1">
                <DataGrid x:Name="DetailLogGrid"
                          Margin="0,0,12,0"
                          ItemsSource="{Binding SelectedState.RelatedLogs}"
                          SelectedItem="{Binding DataContext.SelectedLog, RelativeSource={RelativeSource AncestorType=Window}, Mode=TwoWay}"
                          AutoGenerateColumns="False"
                          Background="{DynamicResource BgDark}"
                          BorderThickness="0"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="{DynamicResource BorderColor}"
                          HeadersVisibility="Column"
                          IsReadOnly="True"
                          SelectionMode="Extended"
                          SelectionUnit="FullRow"
                          VirtualizingPanel.IsVirtualizing="True"
                          VirtualizingPanel.VirtualizationMode="Recycling"
                          ScrollViewer.CanContentScroll="True"
                          EnableRowVirtualization="True">

                    <DataGrid.InputBindings>
                        <MouseBinding Gesture="LeftDoubleClick"
                                      Command="{Binding DataContext.ViewLogDetailsCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                      CommandParameter="{Binding DataContext.SelectedLog, RelativeSource={RelativeSource AncestorType=Window}}" />
                    </DataGrid.InputBindings>

                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="{DynamicResource BgPanel}"/>
                            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
                            <Setter Property="Padding" Value="5"/>
                        </Style>

                        <!-- Row Style for Visual Mode with proper colors -->
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="{Binding RowBackground}" />
                            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="4"/>
                            <Setter Property="Margin" Value="0,1"/>
                            <Style.Triggers>
                                <!-- Error rows - red text for entire row -->
                                <DataTrigger Binding="{Binding IsErrorOrEvents}" Value="True">
                                    <Setter Property="Foreground" Value="#FF6B6B"/>
                                </DataTrigger>

                                <!-- Thread=Events rows - red text for entire row -->
                                <DataTrigger Binding="{Binding ThreadName}" Value="Events">
                                    <Setter Property="Foreground" Value="#FF6B6B"/>
                                </DataTrigger>

                                <!-- State transition rows (light blue) - black text -->
                                <DataTrigger Binding="{Binding RowForeground}" Value="{x:Static Brushes.Black}">
                                    <Setter Property="Foreground" Value="Black"/>
                                </DataTrigger>

                                <!-- Selected row - yellow background with black text -->
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#FFFACD"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                </Trigger>

                                <!-- Marked row selected - green background with black text -->
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsSelected}" Value="True"/>
                                        <Condition Binding="{Binding IsMarked}" Value="True"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Background" Value="#90EE90"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <!-- Annotation Icon Column -->
                        <DataGridTemplateColumn Header="" Width="30" CanUserSort="False">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding AnnotationIcon}"
                                               FontSize="14"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Visibility="{Binding HasAnnotation, Converter={StaticResource BoolToVisibilityConverter}}"
                                               ToolTip="{Binding Annotation}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Lvl" Binding="{Binding Level}" Width="50" FontWeight="Bold">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsErrorOrEvents}" Value="True">
                                            <Setter Property="Foreground" Value="#FF6B6B"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ThreadName}" Value="Events">
                                            <Setter Property="Foreground" Value="#FF6B6B"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding RowForeground}" Value="{x:Static Brushes.Black}">
                                            <Setter Property="Foreground" Value="Black"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=IsSelected}" Value="True">
                                            <Setter Property="Foreground" Value="Black"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Time" Binding="{Binding Date, StringFormat='HH:mm:ss.fff'}" Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="{DynamicResource TextSecondary}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsErrorOrEvents}" Value="True">
                                            <Setter Property="Foreground" Value="#FF6B6B"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ThreadName}" Value="Events">
                                            <Setter Property="Foreground" Value="#FF6B6B"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding RowForeground}" Value="{x:Static Brushes.Black}">
                                            <Setter Property="Foreground" Value="Black"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=IsSelected}" Value="True">
                                            <Setter Property="Foreground" Value="Black"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Thread" Binding="{Binding ThreadName}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#4CA1AF"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsErrorOrEvents}" Value="True">
                                            <Setter Property="Foreground" Value="#FF6B6B"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ThreadName}" Value="Events">
                                            <Setter Property="Foreground" Value="#FF6B6B"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding RowForeground}" Value="{x:Static Brushes.Black}">
                                            <Setter Property="Foreground" Value="Black"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=IsSelected}" Value="True">
                                            <Setter Property="Foreground" Value="Black"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Message" Binding="{Binding Message}" Width="*" MinWidth="400">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
                                    <Setter Property="TextWrapping" Value="NoWrap"/>
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsErrorOrEvents}" Value="True">
                                            <Setter Property="Foreground" Value="#FF6B6B"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ThreadName}" Value="Events">
                                            <Setter Property="Foreground" Value="#FF6B6B"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding RowForeground}" Value="{x:Static Brushes.Black}">
                                            <Setter Property="Foreground" Value="Black"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=IsSelected}" Value="True">
                                            <Setter Property="Foreground" Value="Black"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Heatmap for Visual Mode -->
                <controls:LogHeatmapControl x:Name="VisualHeatmapControl"
                                            Width="10"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Stretch"
                                            Margin="0,22,0,18"
                                            ItemsSource="{Binding SelectedState.RelatedLogs}"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>