<Window x:Class="IndiLogs_3._0.Views.AddReferenceLineWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Reference Line" Height="280" Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource BgDark}">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Name -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:"
                   Foreground="{DynamicResource TextPrimary}"
                   VerticalAlignment="Center" Margin="0,0,10,10"/>
        <TextBox x:Name="NameTextBox" Grid.Row="0" Grid.Column="1"
                 Text="Line 1" Margin="0,0,0,10"
                 Background="{DynamicResource BgCard}"
                 Foreground="{DynamicResource TextPrimary}"
                 BorderBrush="{DynamicResource BorderColor}" Padding="5,3"/>

        <!-- Type -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Type:"
                   Foreground="{DynamicResource TextPrimary}"
                   VerticalAlignment="Center" Margin="0,0,10,10"/>
        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,10">
            <RadioButton x:Name="HorizontalRadio" Content="Horizontal"
                         Foreground="{DynamicResource TextPrimary}"
                         IsChecked="True" Margin="0,0,15,0"
                         Checked="LineType_Changed"/>
            <RadioButton x:Name="VerticalRadio" Content="Vertical"
                         Foreground="{DynamicResource TextPrimary}"
                         Checked="LineType_Changed"/>
        </StackPanel>

        <!-- Value -->
        <TextBlock Grid.Row="2" Grid.Column="0" x:Name="ValueLabel" Text="Value:"
                   Foreground="{DynamicResource TextPrimary}"
                   VerticalAlignment="Center" Margin="0,0,10,10"/>
        <TextBox x:Name="ValueTextBox" Grid.Row="2" Grid.Column="1"
                 Text="0" Margin="0,0,0,10"
                 Background="{DynamicResource BgCard}"
                 Foreground="{DynamicResource TextPrimary}"
                 BorderBrush="{DynamicResource BorderColor}" Padding="5,3"/>

        <!-- Color -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Color:"
                   Foreground="{DynamicResource TextPrimary}"
                   VerticalAlignment="Center" Margin="0,0,10,10"/>
        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,10">
            <ComboBox x:Name="ColorCombo" Width="120"
                      Background="{DynamicResource BgCard}"
                      Foreground="{DynamicResource TextPrimary}"
                      SelectedIndex="0">
                <ComboBoxItem Content="Yellow" Tag="#FFFF00"/>
                <ComboBoxItem Content="Cyan" Tag="#00FFFF"/>
                <ComboBoxItem Content="Magenta" Tag="#FF00FF"/>
                <ComboBoxItem Content="Red" Tag="#FF0000"/>
                <ComboBoxItem Content="Green" Tag="#00FF00"/>
                <ComboBoxItem Content="Orange" Tag="#FFA500"/>
                <ComboBoxItem Content="White" Tag="#FFFFFF"/>
            </ComboBox>
            <Rectangle x:Name="ColorPreview" Width="30" Height="20" Margin="10,0,0,0"
                       Fill="Yellow" Stroke="{DynamicResource BorderColor}" StrokeThickness="1"/>
        </StackPanel>

        <!-- Dashed -->
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Style:"
                   Foreground="{DynamicResource TextPrimary}"
                   VerticalAlignment="Center" Margin="0,0,10,10"/>
        <CheckBox x:Name="DashedCheckBox" Grid.Row="4" Grid.Column="1"
                  Content="Dashed line" IsChecked="True"
                  Foreground="{DynamicResource TextPrimary}" Margin="0,0,0,10"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Add" Width="80" Margin="0,0,10,0"
                    Click="AddButton_Click" IsDefault="True"
                    Style="{DynamicResource ModernBtn}"
                    Background="{DynamicResource PrimaryColor}" Foreground="White"/>
            <Button Content="Cancel" Width="80" Click="CancelButton_Click" IsCancel="True"
                    Style="{DynamicResource ModernBtn}"/>
        </StackPanel>
    </Grid>
</Window>
