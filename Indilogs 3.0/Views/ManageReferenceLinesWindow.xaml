<Window x:Class="IndiLogs_3._0.Views.ManageReferenceLinesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reference Lines" Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        Background="{DynamicResource BgDark}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Manage Reference Lines"
                   Foreground="{DynamicResource TextPrimary}"
                   FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>

        <!-- Lines List -->
        <DataGrid x:Name="LinesGrid" Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  SelectionMode="Single"
                  Background="{DynamicResource BgPanel}"
                  Foreground="{DynamicResource TextPrimary}"
                  BorderBrush="{DynamicResource BorderColor}"
                  RowBackground="{DynamicResource BgCard}"
                  AlternatingRowBackground="{DynamicResource BgPanel}"
                  GridLinesVisibility="Horizontal"
                  HorizontalGridLinesBrush="{DynamicResource BorderColor}"
                  HeadersVisibility="Column"
                  ColumnHeaderHeight="28"
                  RowHeight="26"
                  Margin="0,0,0,10">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="{DynamicResource BgPanel}"/>
                    <Setter Property="Foreground" Value="{DynamicResource TextSecondary}"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="FontSize" Value="12"/>
                    <Setter Property="Padding" Value="8,6"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Style>
            </DataGrid.CellStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="100"
                                    Foreground="{DynamicResource TextPrimary}"/>
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="80" IsReadOnly="True"
                                    Foreground="{DynamicResource TextPrimary}"/>
                <DataGridTextColumn Header="Value" Binding="{Binding Value, StringFormat=F2}" Width="80"
                                    Foreground="{DynamicResource TextPrimary}"/>
                <DataGridTextColumn Header="Color" Binding="{Binding ColorString}" Width="80"
                                    Foreground="{DynamicResource TextPrimary}"/>
                <DataGridCheckBoxColumn Header="Dashed" Binding="{Binding IsDashed}" Width="60"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Add New" Width="80" Margin="0,0,8,0"
                    Click="AddButton_Click"
                    Style="{DynamicResource ModernBtn}"
                    Background="{DynamicResource PrimaryColor}" Foreground="White"/>
            <Button Content="Delete" Width="80" Margin="0,0,8,0"
                    Click="DeleteButton_Click"
                    Style="{DynamicResource ModernBtn}"
                    Background="#E53935" Foreground="White"/>
            <Button Content="Close" Width="80"
                    Click="CloseButton_Click" IsCancel="True"
                    Style="{DynamicResource ModernBtn}"/>
        </StackPanel>
    </Grid>
</Window>
