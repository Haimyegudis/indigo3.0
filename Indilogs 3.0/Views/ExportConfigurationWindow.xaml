<Window x:Class="IndiLogs_3._0.Views.ExportConfigurationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Export CSV Configuration"
        Height="650" Width="1100"
        MinHeight="600" MinWidth="1000"
        MaxHeight="750" MaxWidth="1300"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BgDark}"
        Foreground="{DynamicResource TextPrimary}"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResizeWithGrip"
        FlowDirection="LeftToRight">

    <Window.Resources>
        <Style TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryColor}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="Margin" Value="3,2"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ModernBtn" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.8"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.4"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryBtn" TargetType="Button" BasedOn="{StaticResource ModernBtn}">
            <Setter Property="Background" Value="{DynamicResource BgCard}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
        </Style>

        <Style x:Key="SearchBox" TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource BgDark}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Search" 
                                           Grid.Column="0"
                                           Margin="8,0,5,0"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource TextSecondary}"/>
                                <ScrollViewer x:Name="PART_ContentHost" 
                                              Grid.Column="1"
                                              Margin="{TemplateBinding Padding}"
                                              VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource BgCard}"
                CornerRadius="8" Padding="15" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Export CSV Configuration"
                               FontSize="20" FontWeight="Bold"
                               Foreground="{DynamicResource PrimaryColor}"/>
                    <TextBlock Text="Select components, CHSteps, Threads and columns to export"
                               FontSize="12"
                               Foreground="{DynamicResource TextSecondary}"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Save Preset"
                            Command="{Binding SavePresetCommand}"
                            Style="{StaticResource SecondaryBtn}"/>
                    <Button Content="Load Preset"
                            Command="{Binding LoadPresetCommand}"
                            Style="{StaticResource SecondaryBtn}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- General Options -->
                <GroupBox Grid.Row="0" Header="General Options">
                    <StackPanel>
                        <CheckBox Content="Include Unix Time Column"
                                  IsChecked="{Binding IncludeUnixTime}"/>
                        <CheckBox Content="Include Machine State Column (PlcMngr state with forward-fill)"
                                  IsChecked="{Binding IncludeMachineState}"/>
                        <CheckBox Content="Include Events Column"
                                  IsChecked="{Binding IncludeEvents}"/>
                        <CheckBox Content="Include LogStats Metrics (Total, IsReady, nSemMissed, Lost, bufFull, Max)"
                                  IsChecked="{Binding IncludeLogStats}"/>
                    </StackPanel>
                </GroupBox>

                <!-- Components Selection -->
                <Grid Grid.Row="1" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- IO Components -->
                    <GroupBox Grid.Column="0" Header="IO Components">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBox Grid.Row="0"
                                     Style="{StaticResource SearchBox}"
                                     Text="{Binding IOSearchText, UpdateSourceTrigger=PropertyChanged}"/>

                            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,5">
                                <Button Content="Select All"
                                        Command="{Binding SelectAllIOCommand}"
                                        Style="{StaticResource SecondaryBtn}"
                                        Padding="8,4" FontSize="11"/>
                                <Button Content="Deselect All"
                                        Command="{Binding DeselectAllIOCommand}"
                                        Style="{StaticResource SecondaryBtn}"
                                        Padding="8,4" FontSize="11"/>
                            </StackPanel>

                            <ListBox Grid.Row="2" MaxHeight="400"
                                     ItemsSource="{Binding FilteredIOComponents}"
                                     Background="Transparent" BorderThickness="0"
                                     VirtualizingStackPanel.IsVirtualizing="True"
                                     VirtualizingStackPanel.VirtualizationMode="Recycling"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                     ScrollViewer.CanContentScroll="True">
                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <VirtualizingStackPanel/>
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Category}"
                                                           Foreground="{DynamicResource WarningColor}"
                                                           FontWeight="SemiBold"
                                                           Margin="0,0,5,0"/>
                                                <TextBlock Text=" | "/>
                                                <TextBlock Text="{Binding Name}"/>
                                            </StackPanel>
                                        </CheckBox>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="Margin" Value="0"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                            </ListBox>
                        </Grid>
                    </GroupBox>

                    <!-- AXIS Components -->
                    <GroupBox Grid.Column="1" Header="AXIS Components">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBox Grid.Row="0"
                                     Style="{StaticResource SearchBox}"
                                     Text="{Binding AxisSearchText, UpdateSourceTrigger=PropertyChanged}"/>

                            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,5">
                                <Button Content="Select All"
                                        Command="{Binding SelectAllAxisCommand}"
                                        Style="{StaticResource SecondaryBtn}"
                                        Padding="8,4" FontSize="11"/>
                                <Button Content="Deselect All"
                                        Command="{Binding DeselectAllAxisCommand}"
                                        Style="{StaticResource SecondaryBtn}"
                                        Padding="8,4" FontSize="11"/>
                            </StackPanel>

                            <ListBox Grid.Row="2" MaxHeight="400"
                                     ItemsSource="{Binding FilteredAxisComponents}"
                                     Background="Transparent" BorderThickness="0"
                                     VirtualizingStackPanel.IsVirtualizing="True"
                                     VirtualizingStackPanel.VirtualizationMode="Recycling"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                     ScrollViewer.CanContentScroll="True">
                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <VirtualizingStackPanel/>
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Category}"
                                                           Foreground="{DynamicResource SuccessColor}"
                                                           FontWeight="SemiBold"
                                                           Margin="0,0,5,0"/>
                                                <TextBlock Text=" | "/>
                                                <TextBlock Text="{Binding Name}"/>
                                            </StackPanel>
                                        </CheckBox>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="Margin" Value="0"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                            </ListBox>
                        </Grid>
                    </GroupBox>

                    <!-- CHStep Components -->
                    <GroupBox Grid.Column="2" Header="CHStep Components">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBox Grid.Row="0"
                                     Style="{StaticResource SearchBox}"
                                     Text="{Binding CHStepSearchText, UpdateSourceTrigger=PropertyChanged}"/>

                            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,5">
                                <Button Content="Select All"
                                        Command="{Binding SelectAllCHStepsCommand}"
                                        Style="{StaticResource SecondaryBtn}"
                                        Padding="8,4" FontSize="11"/>
                                <Button Content="Deselect All"
                                        Command="{Binding DeselectAllCHStepsCommand}"
                                        Style="{StaticResource SecondaryBtn}"
                                        Padding="8,4" FontSize="11"/>
                            </StackPanel>

                            <ListBox Grid.Row="2" MaxHeight="400"
                                     ItemsSource="{Binding FilteredCHStepComponents}"
                                     Background="Transparent" BorderThickness="0"
                                     VirtualizingStackPanel.IsVirtualizing="True"
                                     VirtualizingStackPanel.VirtualizationMode="Recycling"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                     ScrollViewer.CanContentScroll="True">
                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <VirtualizingStackPanel/>
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Category}"
                                                           Foreground="{DynamicResource PrimaryColor}"
                                                           FontWeight="SemiBold"
                                                           Margin="0,0,5,0"/>
                                                <TextBlock Text=" | "/>
                                                <TextBlock Text="{Binding Name}"/>
                                            </StackPanel>
                                        </CheckBox>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="Margin" Value="0"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                            </ListBox>
                        </Grid>
                    </GroupBox>

                    <!-- Thread Messages -->
                    <GroupBox Grid.Column="3" Header="Thread Messages">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBox Grid.Row="0"
                                     Style="{StaticResource SearchBox}"
                                     Text="{Binding ThreadSearchText, UpdateSourceTrigger=PropertyChanged}"/>

                            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,5">
                                <Button Content="Select All"
                                        Command="{Binding SelectAllThreadsCommand}"
                                        Style="{StaticResource SecondaryBtn}"
                                        Padding="8,4" FontSize="11"/>
                                <Button Content="Deselect All"
                                        Command="{Binding DeselectAllThreadsCommand}"
                                        Style="{StaticResource SecondaryBtn}"
                                        Padding="8,4" FontSize="11"/>
                            </StackPanel>

                            <ListBox Grid.Row="2" MaxHeight="400"
                                     ItemsSource="{Binding FilteredThreadItems}"
                                     Background="Transparent" BorderThickness="0"
                                     VirtualizingStackPanel.IsVirtualizing="True"
                                     VirtualizingStackPanel.VirtualizationMode="Recycling"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                     ScrollViewer.CanContentScroll="True">
                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <VirtualizingStackPanel/>
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}">
                                            <TextBlock Text="{Binding Name}"/>
                                        </CheckBox>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="Margin" Value="0"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                            </ListBox>
                        </Grid>
                    </GroupBox>
                </Grid>
            </Grid>
        </ScrollViewer>

        <!-- Bottom Buttons -->
        <Border Grid.Row="2" Background="{DynamicResource BgCard}"
                CornerRadius="8" Padding="15" Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Export CSV"
                        Command="{Binding ExportCommand}"
                        Style="{StaticResource ModernBtn}"
                        Padding="25,10"
                        FontSize="14"/>
                <Button Content="Open in Charts Tab"
                        Command="{Binding OpenInChartsTabCommand}"
                        Style="{StaticResource ModernBtn}"
                        Background="#10B981"
                        Padding="25,10"
                        FontSize="14"
                        ToolTip="Open directly in Charts tab (In-Memory, no file export)"/>
                <Button Content="Open External Viewer"
                        Command="{Binding OpenInViewerCommand}"
                        Style="{StaticResource SecondaryBtn}"
                        Padding="25,10"
                        FontSize="14"
                        ToolTip="Export CSV and open in IndiChart viewer"/>
                <Button Content="Cancel"
                        IsCancel="True"
                        Style="{StaticResource SecondaryBtn}"
                        Padding="25,10"
                        FontSize="14"/>
            </StackPanel>
        </Border>

        <!-- Loading Overlay -->
        <Grid Grid.RowSpan="3" Background="#CC000000" 
              Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
              Panel.ZIndex="999">
            <Border Background="{DynamicResource BgCard}" 
                    CornerRadius="12" 
                    Padding="40,30" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    MinWidth="300">
                <StackPanel>
                    <TextBlock Text="â³ Loading Components..." 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="{DynamicResource TextPrimary}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="{Binding LoadingMessage}" 
                               FontSize="14" 
                               Foreground="{DynamicResource TextSecondary}"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"
                               TextAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
