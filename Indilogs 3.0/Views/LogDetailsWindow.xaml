<Window x:Class="IndiLogs_3._0.Views.LogDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Log Details" Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BgDark}"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <Style x:Key="TabHeaderStyle" TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border" Background="{DynamicResource BgCard}"
                                BorderBrush="{DynamicResource BorderColor}" BorderThickness="1,1,1,0"
                                CornerRadius="6,6,0,0" Margin="2,0,2,0" Padding="12,8">
                            <ContentPresenter x:Name="ContentSite" ContentSource="Header"
                                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource PrimaryColor}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter Property="Foreground" Value="{DynamicResource TextSecondary}"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="IsSelected" Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource BgPanel}"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ContentTextBoxStyle" TargetType="TextBox">
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="{DynamicResource BgCard}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Timestamp and Level -->
        <Border Grid.Row="0" Background="{DynamicResource BgCard}" CornerRadius="8" Padding="15" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Timestamp:" FontWeight="Bold" Foreground="{DynamicResource TextSecondary}"
                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock x:Name="TimeText" FontSize="16" FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimary}" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                    <TextBlock Text="Level:" FontWeight="Bold" Foreground="{DynamicResource TextSecondary}"
                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <Border x:Name="LevelBorder" CornerRadius="4" Padding="10,4">
                        <TextBlock x:Name="LevelText" FontSize="14" FontWeight="Bold" VerticalAlignment="Center"/>
                    </Border>
                </StackPanel>

                <Button Grid.Column="3" Content="Copy All" Click="CopyAll_Click"
                        Style="{DynamicResource ModernBtn}" Margin="20,0,0,0" Width="80"/>
            </Grid>
        </Border>

        <!-- Tabs for different fields -->
        <TabControl Grid.Row="1" x:Name="DetailsTabs" Background="Transparent" BorderThickness="0">
            <TabControl.Resources>
                <Style TargetType="TabItem" BasedOn="{StaticResource TabHeaderStyle}"/>
            </TabControl.Resources>

            <TabItem Header="Message">
                <Border Background="{DynamicResource BgCard}" CornerRadius="0,8,8,8">
                    <TextBox x:Name="MessageText" Style="{StaticResource ContentTextBoxStyle}"/>
                </Border>
            </TabItem>

            <TabItem Header="Thread">
                <Border Background="{DynamicResource BgCard}" CornerRadius="0,8,8,8">
                    <TextBox x:Name="ThreadText" Style="{StaticResource ContentTextBoxStyle}"/>
                </Border>
            </TabItem>

            <TabItem Header="Pattern">
                <Border Background="{DynamicResource BgCard}" CornerRadius="0,8,8,8">
                    <TextBox x:Name="PatternText" Style="{StaticResource ContentTextBoxStyle}"/>
                </Border>
            </TabItem>

            <TabItem Header="Logger">
                <Border Background="{DynamicResource BgCard}" CornerRadius="0,8,8,8">
                    <TextBox x:Name="LoggerText" Style="{StaticResource ContentTextBoxStyle}"/>
                </Border>
            </TabItem>

            <TabItem Header="Exception">
                <Border Background="{DynamicResource BgCard}" CornerRadius="0,8,8,8">
                    <TextBox x:Name="ExceptionText" Style="{StaticResource ContentTextBoxStyle}"
                             Foreground="{DynamicResource DangerColor}"/>
                </Border>
            </TabItem>

            <TabItem Header="Data">
                <Border Background="{DynamicResource BgCard}" CornerRadius="0,8,8,8">
                    <TextBox x:Name="DataText" Style="{StaticResource ContentTextBoxStyle}"/>
                </Border>
            </TabItem>

            <TabItem Header="Method">
                <Border Background="{DynamicResource BgCard}" CornerRadius="0,8,8,8">
                    <TextBox x:Name="MethodText" Style="{StaticResource ContentTextBoxStyle}"/>
                </Border>
            </TabItem>
        </TabControl>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Close" Click="Close_Click"
                    Style="{DynamicResource ModernBtn}" Width="80"/>
        </StackPanel>
    </Grid>
</Window>
