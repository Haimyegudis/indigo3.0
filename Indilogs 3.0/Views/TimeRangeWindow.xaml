<Window x:Class="IndiLogs_3._0.Views.TimeRangeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Time Range" Height="400" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BgDark}"
        ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="DatePicker">
            <Setter Property="Background" Value="{DynamicResource BgPanel}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Select Time Range for Filtering Logs" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource PrimaryColor}"/>

        <Border Grid.Row="2" Background="{DynamicResource BgPanel}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1" CornerRadius="4" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>

                <!-- Start Time -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Start Time:" FontWeight="SemiBold"/>
                <DatePicker Grid.Row="0" Grid.Column="2" x:Name="StartDatePicker" SelectedDate="{Binding StartDate, Mode=TwoWay}"/>
                <TextBlock Grid.Row="0" Grid.Column="4" Text="Time:"/>
                <TextBox Grid.Row="0" Grid.Column="6" x:Name="StartTimeTextBox" Text="{Binding StartTimeText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Background="{DynamicResource BgCard}" Foreground="{DynamicResource TextPrimary}" BorderBrush="{DynamicResource BorderColor}" Padding="5"/>

                <!-- End Time -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="End Time:" FontWeight="SemiBold"/>
                <DatePicker Grid.Row="2" Grid.Column="2" x:Name="EndDatePicker" SelectedDate="{Binding EndDate, Mode=TwoWay}"/>
                <TextBlock Grid.Row="2" Grid.Column="4" Text="Time:"/>
                <TextBox Grid.Row="2" Grid.Column="6" x:Name="EndTimeTextBox" Text="{Binding EndTimeText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Background="{DynamicResource BgCard}" Foreground="{DynamicResource TextPrimary}" BorderBrush="{DynamicResource BorderColor}" Padding="5"/>
            </Grid>
        </Border>

        <TextBlock Grid.Row="4" Text="Log Time Range:" FontWeight="SemiBold"/>
        <Border Grid.Row="6" Background="{DynamicResource BgCard}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1" CornerRadius="4" Padding="10">
            <StackPanel>
                <TextBlock Text="{Binding LogStartTime, StringFormat='Earliest Log: {0:yyyy-MM-dd HH:mm:ss.fff}'}" Foreground="{DynamicResource TextSecondary}"/>
                <TextBlock Text="{Binding LogEndTime, StringFormat='Latest Log: {0:yyyy-MM-dd HH:mm:ss.fff}'}" Foreground="{DynamicResource TextSecondary}" Margin="0,5,0,0"/>
                <TextBlock Text="{Binding TotalDuration, StringFormat='Total Duration: {0}'}" Foreground="{DynamicResource PrimaryColor}" Margin="0,5,0,0" FontWeight="SemiBold"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Clear Filter" Click="ClearButton_Click" Width="100" Height="35" Margin="0,0,10,0"
                    Background="{DynamicResource BgPanel}" Foreground="{DynamicResource TextPrimary}"
                    BorderBrush="{DynamicResource BorderColor}" BorderThickness="1"/>
            <Button Content="Cancel" Click="CancelButton_Click" Width="100" Height="35" Margin="0,0,10,0"
                    Background="{DynamicResource BgPanel}" Foreground="{DynamicResource TextPrimary}"
                    BorderBrush="{DynamicResource BorderColor}" BorderThickness="1"/>
            <Button Content="Apply" Click="ApplyButton_Click" Width="100" Height="35"
                    Background="{DynamicResource PrimaryColor}" Foreground="White" BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>
