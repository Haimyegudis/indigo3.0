<Window x:Class="IndiLogs_3._0.Views.RowDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="JSON Data"
        Height="700" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BgDark}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource BgPanel}" Padding="15" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,0,1">
            <TextBlock x:Name="TitleText" FontWeight="Bold" FontSize="14" Foreground="{DynamicResource TextPrimary}"/>
        </Border>

        <!-- JSON Content -->
        <RichTextBox Grid.Row="1"
                     x:Name="JsonRichTextBox"
                     IsReadOnly="True"
                     Background="#1E1E1E"
                     Foreground="#D4D4D4"
                     FontFamily="Consolas"
                     FontSize="13"
                     Padding="15"
                     BorderThickness="0"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     AcceptsReturn="True"
                     AcceptsTab="True">
            <RichTextBox.Resources>
                <Style TargetType="{x:Type Paragraph}">
                    <Setter Property="Margin" Value="0"/>
                    <Setter Property="LineHeight" Value="18"/>
                </Style>
            </RichTextBox.Resources>
        </RichTextBox>

        <!-- Footer -->
        <Border Grid.Row="2" Background="{DynamicResource BgPanel}" Padding="10" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Open in Notepad++" Width="130" Height="28"
                        Background="{DynamicResource BgCard}"
                        Foreground="{DynamicResource TextPrimary}"
                        BorderBrush="{DynamicResource BorderColor}"
                        Margin="0,0,10,0"
                        Click="OpenInNotepadPlusPlus_Click"/>
                <Button Content="Copy" Width="80" Height="28"
                        Background="{DynamicResource BgCard}"
                        Foreground="{DynamicResource TextPrimary}"
                        BorderBrush="{DynamicResource BorderColor}"
                        Margin="0,0,10,0"
                        Click="CopyButton_Click"/>
                <Button Content="Close" Width="80" Height="28"
                        Background="{DynamicResource BgCard}"
                        Foreground="{DynamicResource TextPrimary}"
                        BorderBrush="{DynamicResource BorderColor}"
                        Click="CloseButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
