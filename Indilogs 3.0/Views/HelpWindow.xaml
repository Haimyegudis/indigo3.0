<Window x:Class="IndiLogs_3._0.Views.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IndiLogs 3.0 - User Guide" Height="800" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BgDark}">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondary}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
        <Style TargetType="Run">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="17"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryColor}"/>
            <Setter Property="Margin" Value="0,16,0,6"/>
        </Style>
        <Style x:Key="SubHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="Margin" Value="0,10,0,4"/>
        </Style>
        <Style x:Key="CodeStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="{DynamicResource BgCard}"/>
            <Setter Property="Foreground" Value="{DynamicResource SuccessColor}"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="10,2,0,2"/>
        </Style>
        <Style x:Key="SectionDivider" TargetType="Separator">
            <Setter Property="Background" Value="{DynamicResource BorderColor}"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- TITLE BAR -->
        <Border Grid.Row="0" Background="{DynamicResource BgPanel}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,0,1" Padding="16,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Text="IndiLogs 3.0 ‚Äî User Guide" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource TextPrimary}" Margin="0"/>
                    <TextBlock Text="Complete reference for all features and tools" FontSize="12" Foreground="{DynamicResource TextSecondary}" Margin="0,2,0,0"/>
                </StackPanel>
                <!-- Search box -->
                <Border Grid.Column="1" Background="{DynamicResource BgCard}" CornerRadius="14" Padding="8,4" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="üîç" VerticalAlignment="Center" Margin="2,0,5,0" Foreground="{DynamicResource TextSecondary}" FontSize="12"/>
                        <TextBox x:Name="HelpSearchBox" Width="200" Background="Transparent" BorderThickness="0"
                                 Foreground="{DynamicResource TextPrimary}" CaretBrush="{DynamicResource PrimaryColor}"
                                 VerticalContentAlignment="Center" FontSize="12"
                                 TextChanged="HelpSearchBox_TextChanged">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        <TextBlock x:Name="SearchPlaceholder" Text="Search help..." FontSize="12" Foreground="{DynamicResource TextSecondary}"
                                   VerticalAlignment="Center" IsHitTestVisible="False" Margin="-200,0,0,0" Opacity="0.5"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- MAIN CONTENT: Left TOC + Right Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT: Table of Contents -->
            <Border Grid.Column="0" Background="{DynamicResource BgPanel}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,1,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="8,8">
                        <ListBox x:Name="TocList" Background="Transparent" BorderThickness="0" SelectionChanged="TocList_SelectionChanged"
                                 Foreground="{DynamicResource TextPrimary}" FontSize="12">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="10,6"/>
                                    <Setter Property="Margin" Value="0,1"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Foreground" Value="{DynamicResource TextSecondary}"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="Bd" Property="Background" Value="{DynamicResource BgCard}"/>
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="Bd" Property="Background" Value="{DynamicResource PrimaryColor}"/>
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBoxItem Content="üöÄ  Getting Started" Tag="0"/>
                            <ListBoxItem Content="üìã  Log Tabs Overview" Tag="1"/>
                            <ListBoxItem Content="üîç  Search &amp; Navigation" Tag="2"/>
                            <ListBoxItem Content="üîß  Filtering" Tag="3"/>
                            <ListBoxItem Content="üé®  Coloring" Tag="4"/>
                            <ListBoxItem Content="üìå  Marking &amp; Annotations" Tag="5"/>
                            <ListBoxItem Content="üìä  Analysis Tools" Tag="6"/>
                            <ListBoxItem Content="üìà  Charts" Tag="7"/>
                            <ListBoxItem Content="üñ®  CPR Analysis" Tag="8"/>
                            <ListBoxItem Content="‚öô  Cases &amp; Configurations" Tag="9"/>
                            <ListBoxItem Content="üì§  Export &amp; Reports" Tag="10"/>
                            <ListBoxItem Content="üîó  External Tools" Tag="11"/>
                            <ListBoxItem Content="‚å®  Keyboard Shortcuts" Tag="12"/>
                        </ListBox>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- RIGHT: Help Content -->
            <ScrollViewer Grid.Column="1" x:Name="ContentScroller" VerticalScrollBarVisibility="Auto" Padding="20,10">
                <StackPanel x:Name="ContentPanel" Margin="0,0,10,0">

                    <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
                    <!-- SECTION 0: Getting Started -->
                    <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
                    <TextBlock x:Name="Section0" Text="Getting Started" Style="{StaticResource HeaderStyle}" FontSize="20"/>
                    <Separator Style="{StaticResource SectionDivider}"/>

                    <TextBlock Text="Loading Files" Style="{StaticResource SubHeaderStyle}"/>
                    <TextBlock>
                        ‚Ä¢ Click the <Run>üìÇ OPEN</Run> button in the top toolbar to browse for log files.<LineBreak/>
                        ‚Ä¢ <Run>Drag &amp; Drop</Run> any log file directly onto the window to load it instantly.<LineBreak/>
                        ‚Ä¢ Supported formats: PLC logs, APP logs, ZIP archives containing logs.<LineBreak/>
                        ‚Ä¢ When a file is loaded, all tabs are populated automatically.
                    </TextBlock>

                    <TextBlock Text="Window Layout" Style="{StaticResource SubHeaderStyle}"/>
                    <TextBlock>
                        The main window is divided into three panels:<LineBreak/>
                        ‚Ä¢ <Run>Left Panel:</Run> Session explorer, actions menu, logger tree, and saved configurations.<LineBreak/>
                        ‚Ä¢ <Run>Center Panel:</Run> Tab control with all log views and analysis tabs.<LineBreak/>
                        ‚Ä¢ <Run>Right Panel:</Run> Configuration panel with saved filter sets.<LineBreak/>
                        ‚Ä¢ Use the splitter bars between panels to resize. Toggle panels on/off for more space.
                    </TextBlock>

                    <TextBlock Text="Live Monitoring" Style="{StaticResource SubHeaderStyle}"/>
                    <TextBlock>
                        ‚Ä¢ Drag &amp; drop an <Run>actively writing</Run> log file to start live monitoring.<LineBreak/>
                        ‚Ä¢ <Run>‚ñ∂ RESUME:</Run> Resume auto-scrolling and live fetching.<LineBreak/>
                        ‚Ä¢ <Run>‚è∏ PAUSE:</Run> Temporarily stop fetching new data.<LineBreak/>
                        ‚Ä¢ <Run>‚äò CLEAR:</Run> Clear the buffer and restart fresh.<LineBreak/>
                        ‚Ä¢ The file is polled every 3 seconds for new content.
                    </TextBlock>

                    <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
                    <!-- SECTION 1: Log Tabs Overview -->
                    <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
                    <TextBlock x:Name="Section1" Text="Log Tabs Overview" Style="{StaticResource HeaderStyle}" FontSize="20" Margin="0,30,0,6"/>
                    <Separator Style="{StaticResource SectionDivider}"/>

                    <TextBlock Text="PLC LOGS" Style="{StaticResource SubHeaderStyle}"/>
                    <TextBlock>
                        ‚Ä¢ The main view showing <Run>all PLC logs</Run> from the loaded session.<LineBreak/>
                        ‚Ä¢ Columns: Level, Timestamp, Logger, Thread, Method, Message, Pattern, Data, Exception.<LineBreak/>
                        ‚Ä¢ Heatmap bar on the right edge shows error density and state transitions at a glance.<LineBreak/>
                        ‚Ä¢ Click any tick on the heatmap to jump directly to that position.
                    </TextBlock>

                    <TextBlock Text="PLC FILTERED" Style="{StaticResource SubHeaderStyle}"/>
                    <TextBlock>
                        ‚Ä¢ Shows the <Run>filtered subset</Run> of PLC logs based on your active filters.<LineBreak/>
                        ‚Ä¢ When a filter, search, or thread selection is active, results appear here.<LineBreak/>
                        ‚Ä¢ Same columns and features as PLC LOGS, but only matching entries are shown.
                    </TextBlock>

                    <TextBlock Text="APP" Style="{StaticResource SubHeaderStyle}"/>
                    <TextBlock>
                        ‚Ä¢ Displays <Run>application-level logs</Run> (AppDev logs).<LineBreak/>
                        ‚Ä¢ Same column layout as PLC with heatmap scrollbar for error overview.<LineBreak/>
                        ‚Ä¢ Use the <Run>üêû SHOW ERRORS ONLY</Run> button (bottom bar) to filter for errors sorted newest-first.<LineBreak/>
                        ‚Ä¢ Supports annotations, marking, and all context menu actions.
                    </TextBlock>

                    <TextBlock Text="EVENTS" Style="{StaticResource SubHeaderStyle}"/>
                    <TextBlock>
                        ‚Ä¢ Shows system <Run>events</Run> with Time, Name, State, Severity, Parameters, and Info columns.<LineBreak/>
                        ‚Ä¢ Useful for tracking high-level system events and their parameters.
                    </TextBlock>

                    <TextBlock Text="SCREENSHOTS" Style="{StaticResource SubHeaderStyle}"/>
                    <TextBlock>
                        ‚Ä¢ Displays captured <Run>screenshots</Run> from the log session.<LineBreak/>
                        ‚Ä¢ Scroll through images with zoom support (mouse wheel).<LineBreak/>
                        ‚Ä¢ Pan images by clicking and dragging.
                    </TextBlock>

                    <TextBlock Text="CONFIG" Style="{StaticResource SubHeaderStyle}"/>
                    <TextBlock>
                        ‚Ä¢ Shows the raw <Run>press configuration</Run> file contents from the loaded session.<LineBreak/>
                        ‚Ä¢ Read-only view for reference during analysis.
                    </TextBlock>

                    <TextBlock Text="DB &amp; CONFIG" Style="{StaticResource SubHeaderStyle}"/>
                    <TextBlock>
                        ‚Ä¢ Browse <Run>database schema</Run>: tables, columns, and their types.<LineBreak/>
                        ‚Ä¢ <Run>Browse Table Data:</Run> Double-click a table to view its data.<LineBreak/>
                        ‚Ä¢ <Run>Copy Table/Column Name:</Run> Right-click for quick copy options.<LineBreak/>
                        ‚Ä¢ Switch between database view and configuration file view using the dropdown.
                    </TextBlock>

                    <TextBlock Text="SETUP INFO" Style="{StaticResource SubHeaderStyle}"/>
                    <TextBlock>
                        ‚Ä¢ Displays <Run>system setup information</Run> from the loaded session.<LineBreak/>
                        ‚Ä¢ Read-only view of machine and environment details.
                    </TextBlock>

                    <TextBlock Text="CHARTS" Style="{StaticResource SubHeaderStyle}"/>
                    <TextBlock>
                        ‚Ä¢ Visual charting tab ‚Äî see the <Run>Charts</Run> section below for full details.
                    </TextBlock>

                    <TextBlock Text="CPR" Style="{StaticResource SubHeaderStyle}"/>
                    <TextBlock>
                        ‚Ä¢ Color Print Registration analysis ‚Äî see the <Run>CPR Analysis</Run> section below for full details.
                    </TextBlock>

                    <TextBlock Text="Heatmap Scrollbar" Style="{StaticResource SubHeaderStyle}"/>
                    <TextBlock>
                        ‚Ä¢ Available on the <Run>PLC LOGS</Run> and <Run>APP</Run> tabs, on the right edge of the grid.<LineBreak/>
                        ‚Ä¢ <Run>Red ticks:</Run> Error or event entries.<LineBreak/>
                        ‚Ä¢ <Run>Light blue ticks:</Run> State transitions (PlcMngr ‚Üí markers).<LineBreak/>
                        ‚Ä¢ Click any tick to immediately scroll to that log entry.<LineBreak/>
                        ‚Ä¢ Provides a bird's-eye view of the entire log session at a glance.
                    </TextBlock>

                    <TextBlock Text="Tab Detach" Style="{StaticResource SubHeaderStyle}"/>
                    <TextBlock>
                        ‚Ä¢ Each tab header has a <Run>‚óà detach button</Run> to pop the tab into a floating window.<LineBreak/>
                        ‚Ä¢ Useful for dual-monitor setups: keep PLC on one screen, APP on another.
                    </TextBlock>

                    <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
                    <!-- SECTION 2: Search & Navigation -->
                    <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
                    <TextBlock x:Name="Section2" Text="Search &amp; Navigation" Style="{StaticResource HeaderStyle}" FontSize="20" Margin="0,30,0,6"/>
                    <Separator Style="{StaticResource SectionDivider}"/>

                    <TextBlock Text="Quick Search (Ctrl+F)" Style="{StaticResource SubHeaderStyle}"/>
                    <TextBlock>
                        ‚Ä¢ Press <Run>Ctrl+F</Run> to open the search bar (top-right pill-shaped overlay).<LineBreak/>
                        ‚Ä¢ Type at least <Run>2 characters</Run> to start filtering.<LineBreak/>
                        ‚Ä¢ Smart delay (0.5s) prevents lag while typing.<LineBreak/>
                        ‚Ä¢ Matching rows are shown in the <Run>PLC FILTERED</Run> tab.<LineBreak/>
                        ‚Ä¢ Matching text is <Run>highlighted in yellow</Run> in the message column.<LineBreak/>
                        ‚Ä¢ Invalid syntax is shown in red with a tooltip explaining the error.<LineBreak/>
                        ‚Ä¢ Press <Run>Esc</Run> to close the search panel.
                    </TextBlock>

                    <TextBlock Text="SYNC Button (Time Synchronization)" Style="{StaticResource SubHeaderStyle}"/>
                    <TextBlock>
                        ‚Ä¢ Click the <Run>üîó SYNC</Run> button in the top toolbar to enable time-synchronized scrolling.<LineBreak/>
                        ‚Ä¢ When enabled (button turns blue), scrolling in PLC will store the corresponding time in APP, and vice versa.<LineBreak/>
                        ‚Ä¢ Switch to the target tab to see it automatically scroll to the matching timestamp.<LineBreak/>
                        ‚Ä¢ A status message shows the synced time and accuracy (e.g., "¬±0.3s").<LineBreak/>
                        ‚Ä¢ Matches are found within a 60-second tolerance window.
                    </TextBlock>

                    <TextBlock Text="Global Grep" Style="{StaticResource SubHeaderStyle}"/>
                    <TextBlock>
                        ‚Ä¢ Click <Run>üîç Global Grep</Run> in the actions menu for cross-session search.<LineBreak/>
                        ‚Ä¢ Search across multiple loaded sessions or external files (ZIP, directories).<LineBreak/>
                        ‚Ä¢ Supports regex and boolean operators (AND/OR/NOT).<LineBreak/>
                        ‚Ä¢ Field-specific search: Message, Exception, Method, Data.<LineBreak/>
                        ‚Ä¢ Click results to navigate directly to matching logs.
                    </TextBlock>

                    <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
                    <!-- SECTION 3: Filtering -->
                    <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
                    <TextBlock x:Name="Section3" Text="Filtering" Style="{StaticResource HeaderStyle}" FontSize="20" Margin="0,30,0,6"/>
                    <Separator Style="{StaticResource SectionDivider}"/>

                    <TextBlock Text="Quick Filter" Style="{StaticResource SubHeaderStyle}"/>
                    <TextBlock>
                        ‚Ä¢ <Run>Filter (Checkbox):</Run> Toggles positive filtering ‚Äî show only matching rows.<LineBreak/>
                        ‚Ä¢ <Run>Filter Out (Checkbox):</Run> Toggles negative filtering ‚Äî hide matching rows.<LineBreak/>
                        ‚Ä¢ <Run>Ctrl+Z:</Run> Undo the last filter-out action.
                    </TextBlock>

                    <TextBlock Text="Advanced Filter Editor" Style="{StaticResource SubHeaderStyle}"/>
                    <TextBlock>
                        Click <Run>üîç Filter...</Run> to open the Advanced Filter Editor:
                    </TextBlock>
                    <TextBlock>
                        ‚Ä¢ Build complex filter logic using a <Run>tree structure</Run> with nested groups.<LineBreak/>
                        ‚Ä¢ Combine conditions with <Run>AND / OR / NOT</Run> operators.<LineBreak/>
                        ‚Ä¢ Supported fields: Message, Level, ThreadName, Logger, Method, Pattern, Data, Exception.<LineBreak/>
                        ‚Ä¢ Operators: Contains, Equals, Begins With, Ends With, <Run>Regex</Run>.
                    </TextBlock>

                    <TextBlock Text="Thread Filtering" Style="{StaticResource SubHeaderStyle}"/>
                    <TextBlock>
                        ‚Ä¢ <Run>Header Filter (‚ñº):</Run> Click the dropdown in the Thread column header for multi-select filtering.<LineBreak/>
                        ‚Ä¢ <Run>Right-Click ‚Üí Filter Out (Thread):</Run> Hides all logs from the selected thread.<LineBreak/>
                        ‚Ä¢ Use the 'Clear' button to reset thread filters.
                    </TextBlock>

                    <TextBlock Text="Message Filtering" Style="{StaticResource SubHeaderStyle}"/>
                    <TextBlock>
                        ‚Ä¢ <Run>Right-Click ‚Üí Filter Out (Message):</Run> Hides rows matching a specific text string.<LineBreak/>
                        ‚Ä¢ Useful for hiding repetitive or irrelevant log messages.
                    </TextBlock>

                    <TextBlock Text="Time Focus Filter" Style="{StaticResource SubHeaderStyle}"/>
                    <TextBlock>
                        ‚Ä¢ <Run>Right-click</Run> any log entry ‚Üí <Run>Time Focus Filter</Run>.<LineBreak/>
                        ‚Ä¢ Shows ALL logs (from all threads) within ¬±N seconds/minutes of the selected line.<LineBreak/>
                        ‚Ä¢ Configure the time range in Settings.<LineBreak/>
                        ‚Ä¢ Status bar shows: "Focus Time: ¬±Xs | X logs shown".
                    </TextBlock>

                    <TextBlock Text="Logger Tree" Style="{StaticResource SubHeaderStyle}"/>
                    <TextBlock>
                        ‚Ä¢ The <Run>LOGGERS</Run> panel in the left sidebar shows a hierarchical tree of all loggers.<LineBreak/>
                        ‚Ä¢ Right-click options: Show This, Hide This, Show Only This, Show/Hide With Children, Show All.<LineBreak/>
                        ‚Ä¢ Green checkmark = active logger, Red X = hidden logger.
                    </TextBlock>

                    <TextBlock Text="Show Errors Only" Style="{StaticResource SubHeaderStyle}"/>
                    <TextBlock>
                        ‚Ä¢ The <Run>üêû SHOW ERRORS ONLY</Run> button appears in the bottom bar when the APP tab is selected.<LineBreak/>
                        ‚Ä¢ Filters to show only error-level entries, sorted newest first.
                    </TextBlock>

                    <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
                    <!-- SECTION 4: Coloring -->
                    <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
                    <TextBlock x:Name="Section4" Text="Coloring" Style="{StaticResource HeaderStyle}" FontSize="20" Margin="0,30,0,6"/>
                    <Separator Style="{StaticResource SectionDivider}"/>

                    <TextBlock Text="Custom Coloring Rules" Style="{StaticResource SubHeaderStyle}"/>
                    <TextBlock>
                        Click <Run>üé® Color...</Run> to define highlighting rules for log entries:
                    </TextBlock>
                    <TextBlock>
                        ‚Ä¢ <Run>Field:</Run> Message, Thread, Level, Logger.<LineBreak/>
                        ‚Ä¢ <Run>Operator:</Run> Contains, Equals, Starts With, Ends With, Regex.<LineBreak/>
                        ‚Ä¢ <Run>Value:</Run> The text or pattern to match.<LineBreak/>
                        ‚Ä¢ <Run>Color:</Run> Pick a highlight color for matching rows.
                    </TextBlock>

                    <TextBlock Text="Default Colors" Style="{StaticResource SubHeaderStyle}"/>
                    <TextBlock>
                        Built-in coloring is applied automatically:<LineBreak/>
                        ‚Ä¢ <Run>Errors:</Run> Red<LineBreak/>
                        ‚Ä¢ <Run>PlcMngr state transitions (‚Üí):</Run> Light Blue<LineBreak/>
                        ‚Ä¢ <Run>MechInit:</Run> Orange<LineBreak/>
                        ‚Ä¢ <Run>GetReady:</Run> Light Green<LineBreak/>
                        ‚Ä¢ <Run>Print:</Run> Green
                    </TextBlock>

                    <TextBlock Text="Regex Examples" Style="{StaticResource SubHeaderStyle}"/>
                    <TextBlock Style="{StaticResource CodeStyle}" Text="Error.*timeout"/>
                    <TextBlock Style="{StaticResource CodeStyle}" Text="State: (Init|Ready|Running)"/>
                    <TextBlock Style="{StaticResource CodeStyle}" Text="ID:\s*\d+"/>

                    <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
                    <!-- SECTION 5: Marking & Annotations -->
