<Window x:Class="IndiLogs_3._0.Views.ExportProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Exporting CSV..."
        Height="280" Width="550"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanMinimize"
        ShowInTaskbar="True"
        Topmost="False"
        Background="{DynamicResource BgDark}"
        Foreground="{DynamicResource TextPrimary}">

    <Window.Resources>
        <Style x:Key="ModernBtn" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.8"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.4"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border BorderBrush="{DynamicResource PrimaryColor}" BorderThickness="2" CornerRadius="8">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0" 
                       Text="Exporting CSV File"
                       FontSize="18" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Foreground="{DynamicResource PrimaryColor}"
                       Margin="0,0,0,15"/>

            <!-- Status Text -->
            <TextBlock Grid.Row="1" 
                       x:Name="StatusText"
                       Text="Processing logs..."
                       FontSize="14"
                       HorizontalAlignment="Center"
                       Foreground="{DynamicResource TextPrimary}"
                       Margin="0,0,0,10"/>

            <!-- Progress Bar -->
            <ProgressBar Grid.Row="2"
                         x:Name="ProgressBar"
                         Height="25"
                         Minimum="0"
                         Maximum="100"
                         Value="0"
                         Margin="0,0,0,10"/>

            <!-- Progress Percentage -->
            <TextBlock Grid.Row="3"
                       x:Name="PercentageText"
                       Text="0%"
                       FontSize="13"
                       HorizontalAlignment="Center"
                       Foreground="{DynamicResource TextSecondary}"
                       Margin="0,0,0,10"/>

            <!-- Details Text -->
            <TextBlock Grid.Row="4"
                       x:Name="DetailsText"
                       Text=""
                       FontSize="11"
                       HorizontalAlignment="Center"
                       Foreground="{DynamicResource TextSecondary}"
                       TextWrapping="Wrap"
                       Margin="0,5,0,10"/>

            <!-- Cancel Button -->
            <Button Grid.Row="5"
                    x:Name="CancelButton"
                    Content="Cancel"
                    Click="CancelButton_Click"
                    Style="{StaticResource ModernBtn}"
                    HorizontalAlignment="Center"
                    Padding="30,8"/>
        </Grid>
    </Border>
</Window>
